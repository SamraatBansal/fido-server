# FIDO Server Environment Configuration

# Server Configuration
FIDO_SERVER_HOST=127.0.0.1
FIDO_SERVER_PORT=8080
FIDO_SERVER_WORKERS=

# Database Configuration
FIDO_DATABASE_URL=postgresql://localhost/fido_server
FIDO_DATABASE_MAX_CONNECTIONS=15
FIDO_DATABASE_MIN_CONNECTIONS=5

# WebAuthn Configuration
FIDO_WEBAUTHN_RP_ID=localhost
FIDO_WEBAUTHN_RP_NAME=FIDO Server
FIDO_WEBAUTHN_RP_ORIGIN=http://localhost:8080
FIDO_WEBAUTHN_TIMEOUT=60000
FIDO_WEBAUTHN_ATTESTATION_PREFERENCE=direct
FIDO_WEBAUTHN_USER_VERIFICATION=preferred

# Security Configuration
FIDO_SECURITY_SESSION_TIMEOUT_SECONDS=300
FIDO_SECURITY_MAX_SESSIONS_PER_USER=5
FIDO_SECURITY_RATE_LIMIT_REQUESTS_PER_MINUTE=60
FIDO_SECURITY_ENABLE_CSRF_PROTECTION=true
FIDO_SECURITY_ENABLE_SECURITY_HEADERS=true

# Redis Configuration (optional)
FIDO_REDIS_URL=redis://localhost:6379
FIDO_REDIS_POOL_SIZE=10
FIDO_REDIS_SESSION_PREFIX=fido:

# Logging
RUST_LOG=info